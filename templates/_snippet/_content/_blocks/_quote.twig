{% if settings.section is defined %}
	<div class="section__content">
	{% endif %}
	<div class="flex">
		<div class="w-full {% if settings.centered is not defined %}md:w-8/12{% endif %}">
			<div class="pl-3 my-3 border-l-4 border-gray-700 quote">
				<blockquote>
					{{ block.text }}
				</blockquote>
			</div>
			{% if block.writer|length %}
				<hr>
				<p>{{ block.writer }}</p>
			{% endif %}
			{% if block.cta|length %}
				<div class="inline">
					{% for cta in block.cta.all() %}
						{% include '_snippet/_content/_blocks/_cta' %}
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
	{% if settings.section is defined %}
	</div>
{% endif %}
