{% set inverseClass = block.position == 'left' ? '' : 'flex-row-reverse' %}
{% if block.blockTitle|length %}
	<h2 id="{{ block.blockTitle }}">{{ block.blockTitle }}</h2>
{% endif %}
<div class="flex flex-wrap -mx-4 {{ inverseClass }}">
	<div class="w-full px-4 md:w-1/2">
		{% if block.video != '' %}
			{% set embed = craft.videoEmbedder.getEmbedUrl(block.video) %}
			<div class="embed-container">
				<iframe id="ytplayer" type="text/html" src="{{ embed }}?iv_load_policy=3&rel=0" frameborder="0" title="Youtube embedded video" allowfullscreen></iframe>
			</div>
		{% endif %}
	</div>
	<div class="w-full px-4 md:w-1/2">
		<div class="redactor">
			{{ block.text }}
		</div>
		{% if block.cta|length %}
			<div class="flex flex-wrap">
				{% for cta in block.cta.all() %}
					{% include '_snippet/_content/_blocks/_cta' %}
				{% endfor %}
			</div>
		{% endif %}
	</div>
</div>
