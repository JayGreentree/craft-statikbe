{% if socialMedia.facebook %}
    <li class="">
        <a href="{{ socialMedia.facebook }}" aria-label="{{ 'Bekijk onze Facebook pagina'|t }}" target="_blank" rel="noopener" class="text-primary hover:text-secondary nav__link--facebook">
            <svg class="icon" aria-hidden="true">
                <use xlink:href="{{ alias("@baseUrl/icon/sprite.svg#facebook") }}"></use>
            </svg>
            <span class="sr-only">{{ 'Facebook'|t }}</span>
        </a>
    </li>
{% endif %}
