<footer class="mt-auto page-footer">
	<div class="py-8 bg-gray-300 doormat">
		<div class="container">
			<div class="flex flex-wrap -mx-4">
				<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3">
		 		</div>
				<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3">
					{% include '_snippet/_nav/_doormat' %}
				</div>
			</div>
		</div>
	</div>
	<div class="py-6 footer">
		<div class="container">
			<div class="flex flex-wrap -mx-4">
				<div class="w-full px-4 sm:w-1/2">
					<span>&copy;
						{{ now|date('Y') }}
						{{ systemName }}
						- Built with
						<span class="icon icon--heart text-primary" aria-hidden="true"></span>
						by
						<a target="_blank" rel="noopener" href="https://www.statik.be" class="hover:underline hover:text-primary">Statik</a>
					</span>
				</div>
				<div class="w-full px-4 sm:w-1/2">
					<nav class="">
						<ul class="">
							{% set cookiePage = craft.entries.id(266).one() %}
							{% if cookiePage %}
								<li class="">
									<a href="{{ cookiePage.url }}" class="nav__link">{{ cookiePage.title }}</a>
								</li>
							{% endif %}
							{% set termsPage = craft.entries.id(268).one() %}
							{% if termsPage %}
								<li class="">
									<a href="{{ termsPage.url }}" class="nav__link">{{ termsPage.title }}</a>
								</li>
							{% endif %}
							{% set privacyPage = craft.entries.id(265).one() %}
							{% if privacyPage %}
								<li class="">
									<a href="{{ privacyPage.url }}" class="nav__link">{{ privacyPage.title }}</a>
								</li>
							{% endif %}
							<li>
								<a href="#" class="js-cookie-settings" role="button">{{ 'Cookie-instellingen'|t }}</a>
							</li>
							{% if socialMedia.facebook or socialMedia.instagram or socialMedia.linkedin or socialMedia.twitter or socialMedia.youtube %}
								<li class="">{{ 'Volg ons'|t }}</li>
							{% endif %}
						</ul>
					</nav>
					{% if socialMedia.facebook or  socialMedia.instagram or socialMedia.linkedin or socialMedia.twitter or socialMedia.youtube %}
						<div class="">
							<ul class="">
								{% include '_snippet/_content/_socialMedia' %}
							</ul>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</footer>
