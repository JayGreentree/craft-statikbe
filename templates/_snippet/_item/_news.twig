<div class="w-full px-4 mt-4 sm:w-1/2 md:w-1/3">
	<div class="min-h-full overflow-hidden rounded shadow-lg card--clickable">
		{% if newsEntry.overviewImage %}
			{% set optimizedImage = newsEntry.overviewImage|default(fallback.image)|first.optimizedOverview %}
			<img src="{{ optimizedImage.src(660) ?: max(optimizedImage.optimizedImageUrls) }}" srcset="{{ optimizedImage.srcset() }}" sizes="(max-width: 819px) 95vw, (min-width: 820px) and (max-width: 979px) 420px, (min-width: 980px) 406px, 440px" alt="{{ newsEntry.overviewImage|first.imageCaption ?? newsEntry.overviewImage|first.title ?? newsEntry.title }}" class="w-full"/>
		{% endif %}
		<div class="px-6 py-4">
			<div class="py-1 text-sm font-semibold text-gray-700">{{ newsEntry.postDate.format('d.m.Y') }}</div>
			<h3 class="mb-2 text-xl font-bold">
				<a href="{{ newsEntry.getUrl() }}">{{ newsEntry.overviewTitle ?? newsEntry.title }}</a>
			</h3>
		</div>
	</div>
</div>
