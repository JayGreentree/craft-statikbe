{% extends "_layout" %}

{% block content %}

	<div class="section section--default">
		<div class="container">
			<div class="w8/12">
				<h1>Autocomplete examples</h1>
				<p>These are some examples for an autocomplete</p>
			</div>
		</div>
	</div>

	<div class="section section--default">
		<div class="container">
			<div class="w8/12">
				<h2>Autocomplete single</h2>
			</div>
			<div class="mt-4 w8/12">
				<label for="singleSelect">
					Select an option:
				</label>
				<select name="destination" id="singleSelect" data-s-autocomplete class="rounded border-1">
					<option value="">Select an option</option>
					<option value="1">Option 1</option>
					<option value="2">Option 2</option>
					<option value="3">Plugins</option>
					<option value="4">Autocomplete</option>
					<option value="5">Fun Stuff</option>
					<option value="6">Fun Stuff 2</option>
					<option value="7">Option 3</option>
				</select>
			</div>
		</div>
	</div>

{% endblock %}
