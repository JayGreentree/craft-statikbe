{% if form.hasMultiplePages and form.settings.displayPageTabs %}
    <div class="fui-tabs">
        {% for p in form.pages %}
            <div id="fui-tab-{{ p.id }}" class="fui-tab {{ (p.id == currentPage.id) ? 'fui-tab-active' }}">
                {%- set params = { handle: form.handle, pageId: p.id } -%}

                {%- if submission and submission.id -%}
                    {%- set params = params | merge({ submissionId: submission.id }) -%}
                {%- endif -%}

                <a href="{{ actionUrl('formie/submissions/set-page', params) }}">
                    {{ p.name | t }}
                </a>
            </div>
        {% endfor %}
    </div>
{% endif %}