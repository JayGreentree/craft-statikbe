{% set attributes = {
    type: 'text',
    id: id,
    class: [ 'form__input', 'focus:border-primary-500' ],
    name: handle | namespaceInputName(field.handle),
    placeholder: placeholder | t,
    autocomplete: autocomplete,
    required: required,
    value: value,
    data: data,
    aria: {
        required: required ? 'true' : 'false',
    },
} %}

<input {{ attr(attributes) }} />
