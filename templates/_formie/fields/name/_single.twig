{% set attributes = {
    type: 'text',
    id: options.id,
    class: [ 'form__input', 'focus:border-primary-500' ],
    name: field.handle,
    placeholder: field.placeholder | t,
    required: field.required ? true : false,
    value: value,
    data: {
        'fui-message': field.settings.errorMessage | t,
    },
    aria: {
        required: field.required ? 'true' : 'false',
    },
} %}

<input {{ attr(attributes) }} />
