{% set attributes = {
    id: options.id,
    class: [ 'block appearance-none w-full bg-gray-100 border border-gray-200 text-gray-700 py-3 px-4 pr-8 rounded leading-tight focus:outline-none focus:bg-white focus:border-gray-500' ],
    name: field.handle ~ (field.multiple ? '[]'),
    multiple: field.multiple ? true : false,
    required: field.required ? true : false,
    data: {
        'fui-message': field.settings.errorMessage | t,
    },
    aria: {
        required: field.required ? 'true' : 'false',
    },
} | merge(field.getInputAttributes()) %}

{% set hasOptgroups = false %}

<div class="relative">
    <select {{ attr(attributes) }}>
        {% for option in field.getFieldOptions() %}
            {% if option.optgroup is defined %}
                {% if hasOptgroups %}
                    </optgroup>
                {% else %}
                    {% set hasOptgroups = true %}
                {% endif %}

                <optgroup label="{{ option.optgroup | t }}">
            {% else %}
                {% if field.multiple %}
                    {% set selected = value ? value.contains(option.value) : (option.isDefault ?? false) %}
                {% else %}
                    {% set selected = value and value.value ? value.value == option.value : (option.isDefault ?? false) %}
                {% endif %}

                <option value="{{ option.value }}" {{ selected ? ' selected' }}>{{ option.label | t }}</option>
            {% endif %}
        {% endfor %}

        {% if hasOptgroups %}
            </optgroup>
        {% endif %}
    </select>
    <div class="absolute inset-y-0 right-0 flex items-center px-2 text-gray-700 pointer-events-none">
        <svg class="w-4 h-4 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
    </div>
</div>