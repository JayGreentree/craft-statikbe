{% extends "_layout" %}

{% block content %}

    <div class="section section--default">
        <div class="container">
            <div class="grid">
                <div class="grid__12 grid__8@med">
                    {% include '_snippet/_content/_intro' %}
                </div>
            </div>
        </div>
    </div>

    {% set news = craft.entries().section('news').with(['overviewImage']).orderBy('postDate DESC').limit(3) %}
    {% if news|length %}
        <div class="section section--default">
            <div class="container">
                <div class="section__content">
                    <div class="block">
                        <h2 class="spacer">{{ 'Laatste nieuws'|t }}</h2>
                        <div class="spacer--xsm grid grid--2-col@sml grid--3-col@med">
                            {% for newsEntry in news.all %}
                                {% include '_snippet/_item/_news' %}
                            {% endfor %}
                        </div>
                        {% set overview = craft.entries.section('newsOverview').one() %}
                        <div class="spacer--xlr text--center">
                            <a href="{{ overview.url }}" class="btn">{{ "Meer nieuws"|t }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    
{% endblock %}