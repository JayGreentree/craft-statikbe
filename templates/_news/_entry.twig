{% extends '_layout' %}

{% set breadcrumbs = [
    craft.entries.section('newsOverview').one(),
    entry,
] %}

{% block content %}
    <div class="section section--default">
        <div class="container">
            <div class="grid flex flex-justify-center">
                <div class="grid__12 grid__8@sml">
                    {% include '_snippet/_content/_pageTitle' %}
                    <div class="spacer">{{ entry.postDate|date('d.m.Y'|t) }}</div>
                    <div class="spacer spacer--xsm">
                        {% include '_snippet/_content/_intro' %}
                    </div>
                    <div class="spacer">
                        {% include '_snippet/_content/_contentBuilder' %}
                    </div>
                    <div class="spacer">
                        {% include '_snippet/_content/_socialShare' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}