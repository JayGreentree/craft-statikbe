{% extends "_site/_layout" %}

{% set breadcrumbs = [entry] %}

{% block content %}

    {% include "_site/_snippet/_item/_defaultHeader" %}

    {% include '_site/_snippet/_content/_contentBuilder'
        with {
        settings : {
            section: 'section',
            container: 'container'
        }
    } %}

    <div class="section section--default">
        <div class="container">
            <div class="flex flex-wrap -mx-4">
                <div class="w-full px-4 md:w-1/2">
                    <div class="p-6 bg-light">
                        {{ craft.formie.renderForm('contact') }}
                    </div>
                </div>
                <div class="w-full px-4 md:w-1/2">
                    <div class="aspect-w-16 aspect-h-9 leaflet-map" data-address="Vital Decosterstraat 67A/0301, 3000 Leuven"></div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
