{% requireLogin %}

{% extends "_site/_layout.twig" %}

{% set breadcrumbs = [entry] %}

{% block content %}

    {% include "_site/_snippet/_item/_defaultHeader" %}

    <div class="section section--default">
        <div class="container">
            <div class="flex flex-wrap -mx-4">
                <div class="w-full px-4 md:w-2/3">
                    Profielgegevens hier
                </div>
                <div class="w-full px-4 md:w-1/3">
                    <div class="p-6 bg-light">
                        <ul>
                            {% set editPage = craft.entries.section('editProfile').one() %}
                            {% if editPage|length %}
                                <li><a href="{{ editPage.getUrl() }}" class="link">{{ 'Profiel bewerken'|t }}</a></li>
                            {% endif %}
                            {% set editPassword = craft.entries.section('editPassword').one() %}
                            {% if editPassword|length %}
                                <li><a href="{{ editPassword.getUrl() }}" class="link">{{ 'Wachtwoord wijzigen'|t }}</a></li>
                            {% endif %}
                            <li><a href="/logout" class="link">{{ 'Afmelden'|t }}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}