<div class="py-4">
	<div class="w-full {% if settings.centered is not defined %}md:w-8/12{% endif %}">
		{% if block.blockTitle|length %}
			<h2 id="{{ craft.statik.slugify(block.blockTitle) }}">{{ block.blockTitle }}</h2>
		{% endif %}
		{% if block.text|length %}
			<div class="">
				{{ block.text }}
			</div>
		{% endif %}
		{% if block.form|length %}
			{% set form = craft.formie.forms({ handle: block.form.handle }).one() %}
			{{ craft.formie.renderForm(form) }}
		{% endif %}
	</div>
</div>
