    <li class="">
        <a href="{{ generalInfo.facebook }}" aria-label="{{ 'Bekijk onze Facebook pagina'|t }}" target="_blank" rel="noopener" class="inline-block text-primary hover:text-secondary nav__link--facebook">
            {{ svg('@webroot/frontend/icons/facebook.svg')|attr({class: 'icon '}) }}
            <span class="sr-only">{{ 'Facebook'|t }}</span>
