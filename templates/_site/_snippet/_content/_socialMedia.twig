    <li class="">
        <a href="{{ socialMedia.facebook }}" aria-label="{{ 'Bekijk onze Facebook pagina'|t }}" target="_blank" rel="noopener" class="inline-block text-primary hover:text-secondary nav__link--facebook">
            {{ icon('facebook') }} 
            <span class="sr-only">{{ 'Facebook'|t }}</span>
