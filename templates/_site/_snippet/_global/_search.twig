{% if showInline is not defined %}
    {% set showInline = false %}
{% endif %}

{% set searchResultsEntry = craft.entries.section('searchResults').one() %}
{% if searchResultsEntry %}
	<form action="{{ searchResultsEntry.getUrl() }}" class="flex-1 w-full py-2 {% if not showInline %}js-search-form{% endif %}">
		<input type="hidden" name="cx" value="{{ craft.app.config.custom.cse[currentSite.handle] }}"/>
		<input type="hidden" name="ie" value="UTF-8"/>
		<div class="flex">
			<input type="search" class="flex-1 px-1 text-base border-black border-1 rounded-xs" name="q" placeholder="{{ 'What you are looking for?'|t }}"/>
			<button type="submit" class="ml-4">
				<span class="sr-only">{{ 'Zoeken'|t }}</span>
				{% include "_site/_snippet/_global/_iconSprite" with {baseUrl: alias("@baseUrl"), slug: "magnify", class: ""} %}
			</button>
			{% if not showInline %}
				<button class="hidden ml-4 js-search-close md:block" tabindex="0">
					<span class="sr-only">{{ 'Close Search'|t }}</span>
					{% include "_site/_snippet/_global/_iconSprite" with {baseUrl: alias("@baseUrl"), slug: "clear", class: ""} %}
				</button>
			{% endif %}
		</div>
	</form>
{% endif %}
