<header class="page-header">
	<div class="container">
		<div class="flex flex-wrap items-center justify-between py-4">
			<a href="{{ siteUrl }}" class="">
				{{ svg('@webroot/img/site/logo.svg')|attr({ class: 'w-full max-w-logo', role: 'img', 'aria-label': 'logo' }) }}
			</a>

			{% include '_site/_snippet/_nav/_service' %}
			{% include '_site/_snippet/_nav/_language' %}
			{% include '_site/_snippet/_nav/_main' %}
			<div class="relative flex-wrap items-center justify-end hidden w-full border-fade-bottom-full md:flex">
				<div class="flex items-center js-search-hide">
					<p>
						This will be hidden when search is open
					</p>
					<button class="ml-4 cursor-pointer js-search-trigger js-search-animated">
						<span class="sr-only">{{ 'Zoeken'|t }}</span>
						<svg class="icon" aria-hidden="true">
							<use xlink:href="{{ alias("@baseUrl/icon/sprite.svg#magnify") }}"></use>
						</svg>
					</button>
				</div>
				{% include "_site/_snippet/_global/_search.twig" %}
			</div>
			<a href="#flyout" class="text-3xl js-flyout-toggle md:hidden ie-hidden" role="button">
				<span class="sr-only">Menu</span>
				<svg class="icon" aria-hidden="true">
					<use xlink:href="{{ alias("@baseUrl/icon/sprite.svg#menu") }}"></use>
				</svg>
			</a>
		</div>
	</div>
</header>
