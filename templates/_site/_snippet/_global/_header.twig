<header class="page-header">
	<div class="container">
		<div class="flex items-center justify-between md:items-stretch">
			<a href="{{ siteUrl }}" class="">
				{{ svg('@webroot/img/site/logo.svg')|attr({ class: 'w-full max-w-logo', role: 'img', 'aria-label': 'logo' }) }}
			</a>

			{% if not systemOffline %}
				<div class="flex-col items-end hidden md:flex">
					<div class="relative flex flex-wrap items-center justify-end py-4 pl-10 min-w-searchbox">
						<div class="flex items-center js-search-hide">
							{% include '_site/_snippet/_nav/_service.twig' %}
							{% include "_site/_snippet/_nav/_language" %}
							<div class="ml-6">
								<button class="text-lg cursor-pointer text-primary js-search-trigger js-search-animated">
									<span class="sr-only">{{ 'Zoeken'|t }}</span>
									{% include "_site/_snippet/_global/_icon-sprite.twig" with {baseUrl: alias("@baseUrl"), slug: "magnify", class: ""} %}
								</button>
							</div>
						</div>
						{% include "_site/_snippet/_global/_search.twig" %}
					</div>
					{% include '_site/_snippet/_nav/_main.twig' %}
				</div>
				<a href="#flyout" class="text-3xl js-flyout-toggle md:hidden ie-hidden print:hidden" role="button">
					<span class="sr-only">Menu</span>
					{% include "_site/_snippet/_global/_icon-sprite.twig" with {baseUrl: alias("@baseUrl"), slug: "menu", class: ""} %}
				</a>
			{% endif %}
		</div>
	</div>
</header>
